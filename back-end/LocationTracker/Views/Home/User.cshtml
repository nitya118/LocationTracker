<link href="~/css/mermaid.min.css" rel="stylesheet" />
<link href="~/css/user.css" rel="stylesheet" />


<div class="container-fluid">

    <div class="row">
        <div class="col-md-9">
            <h2>User Access Setup</h2>
            <div id="addUserModal" class="modal" tabindex="-1">
                <div id="dataentry" class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Add/Edit User</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Enter User details</p>
                            <div class="user-data-item">
                                <input id="username" type="email" placeholder="Enter username" required />
                            </div>
                            <div class="user-data-item">
                                <input id="is-supervisor" type="checkbox" class="form-check-input" />
                                <label>Is Supervisor</label>
                            </div>
                            <div class="user-data-item">
                                <input id="can-login" type="checkbox" class="form-check-input" />
                                <label>Can Login</label>
                            </div>
                            <div class="user-data-item">
                                <input id="can-send-sms" type="checkbox" class="form-check-input" />
                                <label>Can Send SMS</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-primary" id="submit">Save</button>
                        </div>

                    </div>

                </div>
            </div>
            <div id="wrapper"></div>
            <div id="confirmation" class="modal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 id="confirmationTitle" class="modal-title"></h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p id="confirmationText"></p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                            <button type="button" id="btnYes" class="btn btn-primary">Yes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card user-global-setting">
                <div class="card-header">
                    <h5 class="card-title">Global Settings</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">These settings effect all users.</p>
                    <div class="form-check form-switch">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Agent Login status</label>
                        <input class="form-check-input" type="checkbox" id="chkGlobalLogin">
                    </div>
                    <div class="form-check form-switch pb-2">
                        <label class="form-check-label" for="flexSwitchCheckDefault">SMS sending status</label>
                        <input class="form-check-input" type="checkbox" id="chkGlobalSms">
                    </div>
                    <div id="dvLoginAlert" class="alert alert-danger" role="alert">
                        Agent login has been disabled!
                    </div>
                    <div id="dvSmsAlert" class="alert alert-danger" role="alert">
                        SMS sending has been disabled!
                    </div>
                </div>
            </div>
            <div class="pt-3">
                <a id="addUser" href="#">Add User..</a>
            </div>
        </div>
    </div>



</div>


<script src="~/js/gridjs.umd.js"></script>
<script src="~/js/users.js" type="module" defer></script>
